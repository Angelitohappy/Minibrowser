    <main>
        <section class="main-logo">
            <img src="/img/Google_2015_logo.svg" alt="Google">
        </section>
        <section class="main-input">
            <div class="main-input-container">
                <span class="search-icon">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" id="search-input" placeholder="Buscar...">
                <button id="search-button" class="invisible">Buscar</button> <!-- Clase para hacerlo invisible -->
            </div>
        </section>
        <section class="main-buttons">
            <div>
                <button>Search with Google</button>
            </div>
            <div>
                <button>I feel lucky</button>
            </div>
        </section>
        <section class="main-region">
            <div>
                <p>Offered by Google in:
                    <span>
