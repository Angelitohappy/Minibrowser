<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="/css/results_table2.css"> <!-- Estilos opcionales -->
</head>

<body>
    <h1>Search results for: "{{query}}"</h1>

    {{#if results.length}}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>URL</th>
            </tr>
        </thead>
        <tbody>
            {{#each results}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.url}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No results found for "{{query}}".</p>
    {{/if}}

    <a href="/"><button>Volver a la b√∫squeda</button></a>
</body>

</html>